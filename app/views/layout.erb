
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if flash[:notice] %>

        <p> <%= flash[:notice] %> </p>
      <% end %>
    <% if the_user %>
    <form action='/sign_out' method='post'>
    <button type='submit'>Sign Out</button>
  </form>
    <% end %>
    <% if flash[:error] %>
      <% flash[:error].each do |e| %>
        <p> <%= e %> </p>
      <% end %>
    <% end %>
      <%= "Welcome #{@the_user.email}" if the_user %>
      <%= yield %>
  </body>
</html>
